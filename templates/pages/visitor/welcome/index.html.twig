    </section>

    {# Last-posts section #}
    <section class="py-3">
        <h2 class="text-center my-3 display-5">Mes derniers articles</h2>

        <div class="container">
            <div class="row">
                {% for post in posts %}
                    <div class="col-md-4">
                        <div class="card mb-3 shadow">
                            <h3 class="card-header">
                                {{post.title}}
                            </h3>
                            <div class="card-body">
                                <p><strong>Catégorie</strong>: {{post.category.name}}</p>
                                {% if post.tags is not empty %}
                                    <p> <strong>Tags</strong>: 
                                        {% for tag in post.tags %}
                                            <span class="mx-1 badge text-bg-secondary">{{tag.name}}</span>
                                        {% endfor %}
                                    </p>
                                {% endif %}
                                <p>
                                    Publié {{post.publishedAt|ago}}
                                </p>
                                <p>
                                    <a href="" class="btn btn-primary">Lire l'article</a>
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    {# Contact-section #}
    <div class="py-3 text-center bg-light">
        <a href="{{path('app_visitor_contact_create')}}" class="my-3 btn btn-lg btn-primary shadow">Contactez-moi</a>
    </div>

{% endblock %}