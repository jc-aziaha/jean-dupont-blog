{% extends "themes/base_visitor.html.twig" %}

{% block title %}Article num:{{post.id}}: {{post.title}}{% endblock %}

{% block description %}{{post.description}}{% endblock %}

{% block main %}
    <div class="container mt-5">
        <div class="jd-container-img text-center">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{path('app_visitor_blog_index')}}">Liste des articles</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{post.title|u.truncate('60', '...')}}</li>
                </ol>
            </nav>

            <div>
                {% if post.image %}
                    <img class="img-fluid" src="{{ vich_uploader_asset(post, 'imageFile') }}" alt="{{ post.title }}">
                {% endif %}
            </div>

            <div>
                <h1>{{post.title}}</h1>
                <small>Publi√© il y a {{post.publishedAt|ago}} par <strong>Jean Dupont</strong></small>
            </div>
        </div>

        <div class="jd-container-post my-5">
            {{post.content|nl2br}}
        </div>
    </div>
{% endblock %}
