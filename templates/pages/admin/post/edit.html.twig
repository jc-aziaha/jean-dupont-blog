{% extends "themes/base_admin.html.twig" %}

{% block title %}Modifier l'article num-{{post.id}}{% endblock %}

{% block description %}Modifier l'article num-{{post.id}}{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modifier cet article</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-10 mx-auto">
                {{form_start(form)}}
                    <div class="mb-3">
                        <label for="admin_post_form_title">Titre</label>
                        <div class="text-danger">{{form_errors(form.title)}}</div>
                        {{form_widget(form.title, {'attr': {'class':'form-control', 'autofocus':'autofocus'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="admin_post_form_category">Catégorie</label>
                        <div class="text-danger">{{form_errors(form.category)}}</div>
                        {{form_widget(form.category, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="admin_post_form_description">Description</label>
                        <div class="text-danger">{{form_errors(form.description)}}</div>
                        {{form_widget(form.description, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="admin_post_form_keywords">Mots clés</label>
                        <div class="text-danger">{{form_errors(form.keywords)}}</div>
                        {{form_widget(form.keywords, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div class="mb-3 row">
                        <div class="col-md-6 text-center">
                            {% if post.image %}
                            <img src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('admin_post_thumb') }}" alt="{{ post.title }}">
                            {% else %}
                            <span>Aucune image existante</span>
                            {% endif %}
                        </div>
                        <div class="col-md-6">
                            <label for="admin_post_form_imageFile">Selectionnez une nouvelle image</label>
                            <div class="text-danger">{{form_errors(form.imageFile)}}</div>
                            {{form_widget(form.imageFile, {'attr': {'class':'form-control mb-4'}})}}
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="admin_post_form_content">Contenu</label>
                        <div class="text-danger">{{form_errors(form.content)}}</div>
                        {{form_widget(form.content, {'attr': {'class':'form-control', 'rows':14}})}}
                    </div>
                    <div>
                        <input formnovalidate type="submit" class="btn btn-primary" value="Sauvegarder">
                    </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>
{% endblock %}