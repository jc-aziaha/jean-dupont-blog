{% extends "themes/base_admin.html.twig" %}

{% block title %}Liste des articles{% endblock %}

{% block description %}Liste des articles{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Liste des articles</h1>

    {% include 'components/alert.html.twig' %}

    <div class="d-flex justify-content-end align-items-center my-3">
        <a href="{{path('app_admin_post_create')}}" class="btn btn-primary shadow"><i class="fa-solid fa-plus"></i> Nouvel article</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Titre</th>
                    <th>Catégorie</th>
                    <th>Publié?</th>
                    <th>Contenu</th>
                    <th>Créé le</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{post.id}}</td>
                        <td>
                            {% if post.image %}
                            <img src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('admin_post_thumb') }}" alt="{{ post.title }}">
                            {% else %}
                            <span>---</span>
                            {% endif %}
                        </td>
                        <td>{{post.title}}</td>
                        <td>{{post.category.name}}</td>
                        <td>
                            {% if post.isPublished %}
                                <span>Publié le {{post.publishedAt|date()}}</span>
                            {% else %}
                                <span>Pas encore</span>
                            {% endif %}

                            <form action="{{path('app_admin_post_publish', {'id':post.id})}}" method="post">
                                <div class="form-check form-switch d-flex justify-content-center align-items-center">
                                    <input type="hidden" name="csrf_token" value="{{csrf_token('publish-post-'~post.id)}}">
                                    <input {{post.isPublished ? 'checked' : ''}} onclick="return confirm('Confirmer cette action')" onchange="this.form.submit()" class="form-check-input" type="checkbox" role="switch">
                                </div>
                            </form>
                        </td>
                        <td>
                            <a href="{{path('app_admin_post_show', {'id':post.id})}}" class="btn btn-sm btn-dark">Lire</a>
                        </td>
                        <td>{{post.createdAt|date()}}</td>
                        <td>
                            <a href="{{path('app_admin_post_edit', {'id':post.id})}}" class="btn btn-sm btn-secondary m-1">Modifier</a>
                            <form class="d-inline" action="{{path('app_admin_post_delete', {'id':post.id})}}" method="post">
                                <input type="hidden" name="csrf_token" value="{{csrf_token('delete-post-'~post.id)}}">
                                <input onclick="return confirm('Confirmer la suppression de l\'article?')" type="submit" class="btn btn-sm btn-danger m-1" value="Supprimer">
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}